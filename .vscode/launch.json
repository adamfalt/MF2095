{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "(gdb) Debug active C file",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/${fileBasenameNoExtension}.exe",
      "cwd": "${workspaceFolder}",
      "MIMode": "gdb",
      "miDebuggerPath": "C:/msys64/mingw64/bin/gdb.exe",
      "externalConsole": true,
      "stopAtEntry": false,
      "preLaunchTask": "Build active C file (MinGW64)"
    }
  ]
}
