{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Prepare build dir",
      "type": "shell",
      "options": { "cwd": "${workspaceFolder}" },
      "command": "powershell",
      "args": ["-NoProfile", "-Command", "New-Item -ItemType Directory -Force build | Out-Null"]
    },
    {
      "label": "Build active C file (MinGW64)",
      "type": "shell",
      "options": { "cwd": "${workspaceFolder}" },
      "command": "C:/msys64/mingw64/bin/gcc.exe",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${workspaceFolder}/build/${fileBasenameNoExtension}.exe"
      ],
      "problemMatcher": ["$gcc"],
      "group": { "kind": "build", "isDefault": true },
      "dependsOn": "Prepare build dir",
      "presentation": { "reveal": "always" }
    }
  ]
}
